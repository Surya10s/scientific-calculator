<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="100dp"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/button1h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B3A9EE"
        android:paddingVertical="15dp"
        android:text="@string/arithmetic_operations"
        android:textColor="#283593"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundImageView2"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/button2h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B3A9EE"
        android:paddingVertical="15dp"
        android:text="@string/trigonometry_operations"
        android:textColor="#283593"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.313"
        app:shapeAppearanceOverlay="@style/roundImageView2"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/button3h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B3A9EE"
        android:paddingVertical="15dp"
        android:text="@string/advanced_math_functions"
        android:textColor="#283593"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.688"
        app:shapeAppearanceOverlay="@style/roundImageView2"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>
